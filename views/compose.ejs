<%- include("partials/header") %>

<h1>Compose</h1>
<form class="" action="/compose" method="post">
    <div class="mb-3">
        <label for="" class="form-label">Title</label>
        <input type="text" class="form-control" name="postTitle" autocomplete="off">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Post</label>
        <textarea class="form-control" name="postBody" rows="3"></textarea>
    </div>
    <br>
    <button type="submit" class="btn btn-primary" name="button">Publish</button>
</form>

<%- include("partials/footer") %>